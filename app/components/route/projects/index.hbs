<div class="route-projects-index">

  <div class="header">
    <div class="title">All projects</div>
    <div class="actions">
      <LinkTo @route="projects.new" class="button">New</LinkTo>
    </div>
  </div>

  <div class="projects">
    {{#each @projects.models as |project|}}
      <LinkTo @route="projects.project" @model={{project.id}} class="project">
        <div class="title">{{project.title}}</div>
      </LinkTo>
    {{else}}
      <div class="placeholder">There are no projects yet</div>
    {{/each}}
  </div>

</div>
