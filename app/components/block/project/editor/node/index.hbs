<div
  class={{class 'block-project-editor-node' type=@node.type disabled=this.selectedTool.nodeDraggingDisabled}}
  role="button"
  data-type="editor"
  data-index={{@index}}
  style={{this.style}}
  {{on 'click' this.onClick}}
>
  {{#if this.overlays}}
    <div class="identifier">{{or @node.identifier 'No identifier'}}</div>
  {{/if}}
  {{component (concat 'block/project/editor/node/' @node.type)
    node=@node
  }}
</div>