<div
  class={{class 'block-project-editor-node' type=@node.type selected=(eq @node this.selected)}}
  role="button"
  data-type="editor"
  data-index={{@index}}
  style={{this.style}}
  {{on 'click' this.onClick}}
  {{did-insert this.didInsertContentElement}}
  {{did-update this.didUpdateActions @node.editor.actions.queued}}
>
  {{#if this.overlays}}
    <div class="identifier">{{or @node.identifier 'No identifier'}}</div>
  {{/if}}
  {{component (concat 'block/project/editor/node/' @node.type)
    node=@node
  }}
</div>