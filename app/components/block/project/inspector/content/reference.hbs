<div class="group reference">
  <div class="label">{{@label}}</div>
  {{#if this.reference.missing}}
    <div class="missing">
      <Block::Icon class="icon" @name="exclamation-circle"/>
      <div class="identifier">{{this.reference.identifier}}</div>
    </div>
  {{/if}}
  <Input::Select
    @values={{this.values}}
    @value={{this.value}}
    @disabled={{not @model.editable}}
    @onChange={{this.onChange}}
  as |value|>
    {{#if value}}
      {{value.identifier}}
    {{else}}
      Not selected
    {{/if}}
  </Input::Select>
</div>
