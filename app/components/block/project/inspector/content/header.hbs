<div class="group header">
  <div class="details">
    <div class="type">{{@model.typeName}}</div>
    <div class="identifier">{{or @name 'No identifier'}}</div>
  </div>
  <div class="accessories">
    {{#if @model.tree.hideable}}
      <Block::Icon class={{class 'icon' faded=(not @model.selfHidden)}} @name={{if @model.selfHidden 'eye-slash' 'eye'}} {{on 'click' this.toggleHidden}}/>
    {{/if}}
    {{#if @model.tree.lockable}}
      <Block::Icon class={{class 'icon' faded=(not @model.selfLocked)}} @name={{if @model.selfLocked 'lock' 'unlock'}} {{on 'click' this.toggleLocked}}/>
    {{/if}}
  </div>
</div>
