<@content.header @name={{@model.identifier}}/>
<@content.input @label="Identifier" @key="identifier"/>
<@content.pixel/>
<@content.actions as |actions|>
  <actions.button @label="Add new color" @onClick={{this.addColor}}/>
</@content.actions>
{{#if @model.color}}
  <@content.color @label="Selected color" @model={{@model.color}}/>
  <@content.delete @label="Delete color" @confirmation="Are you sure you want to delete this color?" @model={{@model.color}}/>
{{/if}}
<@content.reorder/>
<@content.delete @label="Delete palette" @confirmation="Are you sure you want to delete this palette?"/>