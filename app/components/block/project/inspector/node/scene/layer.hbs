<@content.tabs @tabs={{this.tabs}} @tab={{this.tab}} @label="label" @onSelect={{this.selectTab}}/>

{{#if (eq this.tab.id 'layer')}}

  <@content.header @name={{@model.identifier}}/>
  <@content.input @label="Identifier" @key="identifier"/>
  <@content.position/>
  <@content.grid/>
  <@content.actions as |actions|>
    <actions.button @label="Add new sprite" @onClick={{this.addSpriteFrame}}/>
    <actions.button @label="Add new sequence" @onClick={{this.addSequence}}/>
  </@content.actions>
  <@content.pixel @model={{@model.scene}}/>
  <@content.reorder/>
  <@content.delete @label="Delete layer" @confirmation="Are you sure you want to delete this layer?"/>

{{else if (eq this.tab.id 'assets')}}

  <@content.assets/>

{{/if}}
