<@content.header @name={{@model.identifier}}/>
<@content.input @label="Identifier" @key="identifier"/>
<@content.actions as |actions|>
  <actions.button @label="Add new frame" @onClick={{this.addFrame}}/>
  <actions.button @label="Create frames" @onClick={{this.addFrames}}/>
</@content.actions>
<@content.reorder/>
<@content.delete @label="Delete sprite" @confirmation="Are you sure you want to delete this sprite?"/>