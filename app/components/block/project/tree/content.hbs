{{#each @array as |node|}}

  <@tree.item
    class={{node.type}}
    @selected={{node.selected}}
    @lock={{node.lock}}
    @lockable={{node.tree.lockable}}
    @hide={{node.hide}}
    @hideable={{node.tree.hideable}}
    @expanded={{node.expanded}}
    @expandable={{node.tree.expandable}}
    @warning={{node.warnings.any}}
    @onSelect={{fn @onSelect node}}
    @onUpdate={{fn @onUpdate node}}
  >
    <:content>
      <div class="row">{{node.typeName}}</div>
      <div class="row strong">{{or node.identifier 'No identifier'}}</div>
    </:content>
    <:items>
      <Block::Project::Tree::Content
        @array={{node.children}}
        @tree={{@tree}}
        @onSelect={{@onSelect}}
        @onUpdate={{@onUpdate}}
      />
    </:items>
  </@tree.item>

{{/each}}