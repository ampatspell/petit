    <Konva::Node::Rect @parent={{parent}} @model={{hash
      x=10
      y=10
      width=10
      height=10
      fill="#000"
    }}/>

    <Konva::Node::Rect @parent={{parent}} @model={{hash
      x=20
      y=10
      width=10
      height=10
      fill="#fff"
    }}/>

  </Konva::Node::Layer>

</Block::Konva::Editor>