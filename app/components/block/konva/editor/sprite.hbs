<Konva::Hotkeys @onBind={{this.onBindHotkeys}}/>

{{#if this.frame}}

  <Block::Konva::Editor class="scene" as |editor|>

    <Konva::Node::Layer @parent={{editor.stage}} as |parent|>
      <Konva::Node::Text @parent={{parent}} @model={{hash
        x=10
        y=10
        fill="#333"
        text="Sprite editor"
        fontFamily="Ubuntu Mono"
        fontSize=16
      }}/>
      <Konva::Node::Rect @parent={{parent}} @model={{hash
        x=100
        y=100
        width=10
        height=10
        fill="#000"
      }}/>
      <Konva::Node::Rect @parent={{parent}} @model={{hash
        x=110
        y=100
        width=10
        height=10
        fill="#fff"
      }}/>
    </Konva::Node::Layer>

  </Block::Konva::Editor>

{{else}}

  <div class="block-konva-editor placeholder">
    <div class="title">Please create a frame</div>
  </div>

{{/if}}
